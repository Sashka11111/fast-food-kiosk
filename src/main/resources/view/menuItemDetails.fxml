<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="300.0" spacing="10.0" style="-fx-border-width: 1; -fx-padding: 10;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.metenkanich.fastfoodkiosk.presentation.controller.MenuItemDetailsController">
  <children>
    <ImageView fx:id="menuImage" fitHeight="150.0" fitWidth="150.0" preserveRatio="true" />
    <Label fx:id="menuItemName" style="-fx-font-size: 16px; -fx-font-weight: bold;" textAlignment="CENTER" />
    <Label fx:id="menuItemPrice" style="-fx-font-size: 14px; -fx-text-fill: #ec7c39;" />
    <Label fx:id="menuItemCalories" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
    <Label fx:id="menuItemDescription" alignment="CENTER" prefWidth="280.0" style="-fx-font-size: 12px; -fx-wrap-text: true;" />
    <Label fx:id="menuItemIngredients" alignment="CENTER" contentDisplay="CENTER" prefHeight="98.0" prefWidth="278.0" style="-fx-wrap-text: true;" textAlignment="CENTER" />
    <HBox alignment="CENTER" spacing="10.0" />
  <Button fx:id="closeButton" onAction="#closeWindow" style="-fx-background-color: #dc3545; -fx-text-fill: white;" text="Закрити" />
  </children>
</VBox>
