<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="720.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.metenkanich.fastfoodkiosk.presentation.controller.MenuController">
  <children>
    <!-- Верхня панель для категорій з горизонтальним скролом -->
    <AnchorPane prefHeight="90.0" style="-fx-background-color: white;">
      <children>
        <ScrollPane fitToHeight="true" prefHeight="90.0" styleClass="scroll-pane"
                   hbarPolicy="AS_NEEDED" vbarPolicy="NEVER"
                   AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                   AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
          <content>
            <HBox fx:id="categoryBar" spacing="15.0" style="-fx-background-color: white; -fx-padding: 15;">
              <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
              </padding>
              <!-- Список категорій буде динамічно заповнюватися контролером -->
            </HBox>
          </content>
        </ScrollPane>
      </children>
    </AnchorPane>
    <Label fx:id="errorLabel" layoutX="42.0" layoutY="60.0" prefHeight="30.0" prefWidth="866.0" style="-fx-text-fill: red;">
      <font>
        <Font size="14.0" />
      </font></Label>
    <!-- Основна область для пунктів меню -->
    <ScrollPane fitToWidth="true" prefHeight="620.0">
      <content>
        <GridPane fx:id="menuGrid" hgap="10.0" vgap="10.0" alignment="TOP_CENTER">
          <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.33" />
          </columnConstraints>
          <!-- Пункти меню будуть динамічно додаватися контролером -->
        </GridPane>
      </content>
    </ScrollPane>
  </children>
</VBox>